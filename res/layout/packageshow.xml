<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<TextView android:id="@+id/thisPackageName" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:textSize="36sp" />
          
<TextView android:id="@+id/thisPackageUpdatedAt" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:textSize="12sp" />
          
<TextView android:id="@+id/thisPackageContentFileName"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:textSize="12sp" />
          
<Button android:text="@string/button_install_package" 
        android:id="@+id/InstallButton" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:hapticFeedbackEnabled="true" android:textSize="12dp" />
          
<ListView android:id="@+id/thisPackageLocations"
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content" 
          android:layout_marginTop="15dp"/>

</LinearLayout>
